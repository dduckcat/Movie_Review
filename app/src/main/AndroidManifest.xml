<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviereview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_icon_start"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_start"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieReview"
        tools:targetApi="31">
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.ActivityRecycler"
            android:exported="true">

        </activity>
    </application>

</manifest>